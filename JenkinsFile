pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/hrithik2712k/Automation-Practice'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                script {
                    // Install dependencies (e.g., npm install)
                    sh 'npm install'
                }
            }
        }
        
        stage('Run Tests') {
            steps {
                script {
                    // Run Cypress tests
                    sh 'npx cypress run'
                }
            }
        }
        
        stage('Post Actions') {
            steps {
                junit '**/results/*.xml' // Update path to match your test reports location
            }
        }
    }
}
